{
  "version": "0.1.2",
  "license": "MIT",
  "keywords": [
    "electron",
    "ipc",
    "Worker",
    "MessagePort",
    "MessageChannel"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "message-port-wrapper",
  "author": "YeungKC <message-port-wrapper@YeungKC.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/YeungKC/message-port-wrapper.git"
  },
  "description": "Simplified IPC communication for MessagePort.",
  "module": "dist/message-port-wrapper.esm.js",
  "size-limit": [
    {
      "path": "dist/message-port-wrapper.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/message-port-wrapper.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "husky": "^7.0.4",
    "message-port-polyfill": "^0.2.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "nanoid": "^3.3.2"
  }
}
